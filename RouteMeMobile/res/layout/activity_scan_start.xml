<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScanStartActivity" >

    <TextView
        android:id="@+id/start_scan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_scan_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/start_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onScanClicked"
            android:text="@string/start_scan"
            android:textStyle="bold" />

        <Button
            android:id="@+id/forward_to_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onForwardClicked"
            android:text="@string/forward_to_map" />
    </LinearLayout>

</LinearLayout>