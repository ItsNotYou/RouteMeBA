<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity" >

    <fragment
        android:id="@+id/statusHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="de.unipotsdam.nexplorer.client.android.StatusHeaderFragment" />

    <fragment
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="de.unipotsdam.nexplorer.client.android.RotatingMapFragment" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C9DAEF"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/nextItemDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_nextitemdistance"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activeItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_activeitems"
            android:visibility="gone" />

        <Button
            android:id="@+id/collectItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="collectItem"
            android:text="@string/collect_item" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_hint" />
    </LinearLayout>

</LinearLayout>